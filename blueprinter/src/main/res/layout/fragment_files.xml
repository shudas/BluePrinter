                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--tools:layout="@layout/activeserv_listfragment" />-->

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/servCatDiv"/>

            <TextView
                android:id="@+id/inactservLabel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/inactServCat"
                android:textSize="@dimen/servCatTextSize"
                android:background="@color/servCat"
                android:paddingLeft="@dimen/servCatPadL"
                android:paddingTop="@dimen/servCatPad"
                android:paddingRight="@dimen/servCatPad"
                android:paddingBottom="@dimen/servCatPad" />

            <!--<fragment android:name="com.shudas.blueprinter.InactiveServListFrag"-->
